<div class="row">
  <div class="col-xl">
    <div class="card mb-4">
      <%= form_with(model: book, local: true) do |form| %>
        <% if book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

            <ul>
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <label class="form-label" for="basic-form-name">Title</label>
          <input class="form-control" id="basic-form-name" type="text" placeholder="Title">
        </div>

        <div class="mb-3">
          <%= form.label :author %>
          <%= form.text_field :author %>
        </div>

        <div class="mb-3">
          <%= form.label :year %>
          <input class="form-control" id="basic-form-dob" type="date">
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>